<html>
    <head>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="css/styles.css" rel="stylesheet" type="text/css">
        <title>Shoes</title>
    </head>
    <body>
        <div class="container">

            <h1>{{ brand.getName }}</h1>

            {% if brand_stores is not empty %}
                <h3>Here are the stores that carry {{ brand.getName }}:</h3>
                <ul>
                    {% for store in brand_stores %}
                        <li>{{ store.getName }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <h3>Ain't no stores that carry this brand.</h3>
            {% endif %}

            <h4>Add a store that carries this brand:</h4>

            <form action="/add_stores" method="post">
                <input id="brand_id" name="brand_id" value="{{ brand.getId }}" type="hidden">
                <div class="form-group">
                    <label for="store_id">Select store:</label>
                    <select id="store_id" name="store_id">
                        {% for store in all_stores %}
                            <option value="{{ store.getId }}">{{ store.getName }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-xs btn-primary">Add</button>
            </form>
            <a href="/">Home</a>
        </div>
    </body>
</html>
